<%= simple_form_for(@artist) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :description %>
    <%= f.input :domain_id, collection: Domain.all, :required => true %>
    <%= f.input :street %>
    <%= f.input :zipcode %>
    <%= f.input :city %>
    <%= f.input :country, as: :string, input_html: {value: f.object.country || 'France'} %>
    <%= f.input :phone %>
    <%= f.input :siret %>
    <%= f.input :website %>
    <%= f.input :photo, as: :attachinary %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
