<div class="container">
  <div class="profile-card">
    <div class="row">
      <div class="col-sm-3">
        <%= cl_image_tag @artist.photo.path, width: 200, height: 200, crop: :fill, class: "img-circle img-responsive center-block" %>
        <h4 class="text-center text-uppercase"><%= @artist.username %></h4>
        <h5 class="text-center"><%= @artist.domain.name %></h5>
        <h5 class="text-center text-uppercase"><%= @artist.city %></h5>
      </div>
      <div class="col-sm-7">
        <div class="profile-description">
          <h3 class="text-uppercase"><%= @artist.username %></h3>
          <p class="text-justify"><%= @artist.description %></p>
          <h4 class="text-uppercase"><%= @artist.website %></h4>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="artist-product">
  <h4 class="text-uppercase"> <strong><%= @artist.username %>'s products </strong></h4>
        <% @products = @artist.products %>
        <%= render 'shared/card_product'%>
    </div>
  </div>
</div>

<% if current_user.artist == @artist %>

<%= link_to 'Edit my profile', edit_artist_path %>

<% end %>

