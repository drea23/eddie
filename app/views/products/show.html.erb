<div class="container">
  <div class="product">
    <div class="row">
      <div class="col-sm-5 col-sm-offset-1">
        <%= render 'shared/product-carrousel' %>
      </div>
      <div class="col-sm-5">
        <div class="product-description">
          <h3 class="text-uppercase"><%= @product.name %></h3>
          <p><% if current_user && current_user.artist == @product.artist %>
            <%= link_to (raw("<i class='fa fa-pencil-square-o' aria-hidden='true'></i>")), edit_product_path(@product), class: "text-" %>
            <%= link_to (raw("<i class='fa fa-trash-o' aria-hidden='true'></i>")), product_path(@product) %>
          <% end %></p>
          <ul class="list-unstyled">
            <li class="text-uppercase"><%= link_to @product.artist.username, artist_path(@product.artist)%></li>
            <li class="text-justify"><%= @product.description %></li>
            <li class="text-uppercase"> Size : <%= @product.format %></li>
            <li class="text-uppercase"> Materials : <%= @product.material.name %></li>
            <li class="text-uppercase"> Price : <%= humanized_money_with_symbol(@product.product_price) %></li>
            <li class="text-uppercase"> Delivery price : <%= humanized_money_with_symbol(@product.delivery_price) %></li>
          </ul>
          <button type="submit" data-toggle="modal" data-target="#addToCart" class="btn btn-default btn-hero">Add to cart</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="review">
    <div class="row">
      <div class="col-xs-10 col-md-offset-1">
        <% if @product.reviews != nil %>
          <%= render 'shared/review-card' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render '/shared/add_to_cart_modal' %>
