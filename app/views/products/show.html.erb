<div>
  <h2>Reviews</h2>
    <ul>
        <% @product.reviews.each do |review| %>
        <li>
          <h3><%= review.title %></h3>
          <span><%= review.rating %>/5</span>
          <p><%= review.content %></p>
        </li>
        <% end %>
    </ul>
    <%= link_to 'Add a review', new_product_review_path(@product) %>
</div>

